<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actor_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_main_image_height">

        <ImageView
            android:id="@+id/actor_photo_image"
            android:layout_width="@dimen/item_main_image_width"
            android:layout_height="@dimen/item_main_image_height"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/item_main_image_margin"
            android:contentDescription="@string/actor_photo_desc"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/actor_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/item_margin_end"
            android:layout_marginStart="@dimen/item_margin_start"
            android:layout_toEndOf="@+id/actor_photo_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/color_main_text" />
    </RelativeLayout>

</android.support.v7.widget.CardView>