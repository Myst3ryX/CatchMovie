<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_main_image_height">

        <ImageView
            android:id="@+id/movie_poster_image"
            android:layout_width="@dimen/item_main_image_width"
            android:layout_height="@dimen/item_main_image_height"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/item_main_image_margin"
            android:contentDescription="@string/movie_poster_desc"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/movie_context_menu_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/item_cont_menu_margin"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_menu"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/movie_release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/item_margin_end"
            android:layout_marginStart="@dimen/item_margin_start"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/movie_poster_image"
            android:layout_toStartOf="@+id/movie_context_menu_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/color_sub_text" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_release_year"
            android:layout_marginEnd="@dimen/item_margin_end"
            android:layout_marginStart="@dimen/item_margin_start"
            android:layout_marginTop="@dimen/item_line_divider"
            android:layout_toEndOf="@+id/movie_poster_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/color_main_text" />

        <TextView
            android:id="@+id/movie_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_title"
            android:layout_marginEnd="@dimen/item_margin_end"
            android:layout_marginStart="@dimen/item_margin_start"
            android:layout_marginTop="@dimen/item_line_divider"
            android:layout_toEndOf="@+id/movie_poster_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/color_sub_text" />

        <ImageView
            android:id="@+id/rate_star_image"
            android:layout_width="@dimen/item_logo_image_width"
            android:layout_height="@dimen/item_logo_image_height"
            android:layout_below="@+id/movie_genre"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/item_margin_start"
            android:layout_toEndOf="@+id/movie_poster_image"
            android:paddingBottom="@dimen/item_line_divider"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_star_border"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/movie_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/item_line_divider"
            android:layout_below="@+id/movie_genre"
            android:layout_toEndOf="@+id/rate_star_image"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/color_main_text" />

        <ImageView
            android:id="@+id/tmdb_logo_image"
            android:layout_width="@dimen/item_logo_image_width"
            android:layout_height="@dimen/item_logo_image_height"
            android:layout_below="@+id/movie_genre"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/item_margin_start"
            android:layout_toEndOf="@+id/movie_rating"
            android:paddingBottom="@dimen/item_line_divider"
            android:scaleType="centerInside"
            tools:src="@drawable/tmdb_logo_stacked"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tmdb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/item_line_divider"
            android:layout_below="@+id/movie_genre"
            android:layout_toEndOf="@+id/tmdb_logo_image"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/color_main_text" />

    </RelativeLayout>

</android.support.v7.widget.CardView>