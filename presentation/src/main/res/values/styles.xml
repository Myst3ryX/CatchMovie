<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.PopupStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/color_main_text</item>
        <item name="android:itemBackground">@color/color_main_background</item>
    </style>

    <style name="ThemeOverlay.AppCompat.NavigationView">
        <item name="android:listDivider">@color/color_nav_divider</item>
        <item name="colorControlHighlight">@color/color_nav_item_selected_background</item>
    </style>

</resources>
