<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_result_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="@dimen/item_card_elevation">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="@dimen/item_vertical_min_width">

        <ImageView
            android:id="@+id/movie_poster_image"
            android:layout_width="@dimen/item_main_image_width"
            android:layout_height="@dimen/item_main_image_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:background="@android:color/transparent"
            android:contentDescription="@string/movie_poster_desc"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_poster_image"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginStart="@dimen/margin_standard"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="@integer/item_result_title_max_lines"
            android:maxWidth="@dimen/item_vertical_max_title_width"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/color_main_text" />

        <TextView
            android:id="@+id/movie_release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_title"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginStart="@dimen/margin_standard"
            android:gravity="center_horizontal"
            android:maxLines="@integer/item_result_release_year_max_lines"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/color_sub_text" />

    </RelativeLayout>

</android.support.v7.widget.CardView>